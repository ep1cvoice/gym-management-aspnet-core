@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 bg-black ">
    <div class="container container-fluid px-0">
        <div class="row align-items-center g-0">

            <div class="col-lg-6 mb-4 mb-lg-0">

                <h1 class="display-4 fw-bold text-light">
                    Your stronger future
                    starts from here
                </h1>

                <p class="text-secondary mt-3">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Consectetur atque sapiente consequuntur eaque asperiores laudantium.
                </p>

                <div class="d-flex align-items-center gap-3 mt-4">

                    <a class="btn btn-primary btn-lg px-4" href="#">
                        Start Training
                    </a>

                    <a class="d-flex align-items-center text-light text-decoration-none" href="#">
                        <span class="btn btn-outline-light rounded-circle me-2">
                            <i class="bi bi-play-fill"></i>
                        </span>
                        Watch Demo
                    </a>

                </div>

                <div class="d-flex align-items-center gap-3 mt-4">
                    <div class="d-flex">
                        <img src="https://i.pravatar.cc/50?img=3" class="rounded-circle border border-2 border-dark" />
                        <img src="https://i.pravatar.cc/50?img=4" class="rounded-circle border border-2 border-dark ms-n2" />
                        <img src="https://i.pravatar.cc/50?img=5" class="rounded-circle border border-2 border-dark ms-n2" />
                    </div>

                    <span class="text-secondary small">
                        10K+ satisfied clients
                    </span>
                </div>

            </div>

            <div class="col-lg-6 text-center">
                <img src="/img/hero-img/hero-img-large.jpg" alt="Hero"
                     class="img-fluid rounded-3"
                     alt="Fitness hero image" />
            </div>

        </div>
    </div>
</section>



