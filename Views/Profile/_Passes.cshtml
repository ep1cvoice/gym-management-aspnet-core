@using GymApp.Models
@using GymApp.Models.Enums
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject AppDbContext DbContext

@{
    var userId = UserManager.GetUserId(User);
    var user = DbContext.Users
    .Where(u => u.Id == userId)
    .Select(u => new
    {
        Pass = u.ActivePass
    })
    .FirstOrDefault();

    var activePass = user?.Pass;
}

<div class="container">

    @* ===== KOMUNIKATY ===== *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    @* ===== BRAK KARNETU ===== *@
    @if (activePass == null)
    {
        <h3 class="mb-4">Wybierz karnet</h3>

        <div class="row justify-content-center">

            <!-- STUDENT -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="pricing-card bg-dark rounded-4 p-4 h-100">
                    <h6 class="text-primary">Student Package</h6>
                    <h2 class="fw-bold mb-1">$45</h2>
                    <p class="text-secondary small mb-4">per month</p>

                    <form asp-action="BuyPass" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="passType" value="@PassType.Student" />
                        <button type="submit" class="btn bg-primary w-100">
                            Subscribe Now
                        </button>
                    </form>
                </div>
            </div>

            <!-- BASIC -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="pricing-card featured rounded-4 p-4 h-100">
                    <div class="badge-offer">Most Popular</div>

                    <h6 class="text-light">Basic Package</h6>
                    <h2 class="fw-bold mb-1">$65</h2>

                    <form asp-action="BuyPass" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="passType" value="@PassType.Basic" />
                        <button type="submit" class="btn bg-light text-dark w-100">
                            Subscribe Now
                        </button>
                    </form>
                </div>
            </div>

            <!-- PRO -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="pricing-card bg-dark rounded-4 p-4 h-100">
                    <h6 class="text-primary">Pro Package</h6>
                    <h2 class="fw-bold mb-1">$89</h2>

                    <form asp-action="BuyPass" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="passType" value="@PassType.Pro" />
                        <button type="submit" class="btn bg-primary w-100">
                            Subscribe Now
                        </button>
                    </form>
                </div>
            </div>

            <!-- ATHLETE -->
            <div class="col-12 col-md-6 col-lg-3 mb-4">
                <div class="pricing-card bg-dark rounded-4 p-4 h-100">
                    <h6 class="text-primary">Athlete Package</h6>
                    <h2 class="fw-bold mb-1">$119</h2>

                    <form asp-action="BuyPass" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="passType" value="@PassType.Athlete" />
                        <button type="submit" class="btn bg-primary w-100">
                            Subscribe Now
                        </button>
                    </form>
                </div>
            </div>

        </div>
    }
    else
    {
        @* ===== AKTYWNY KARNET ===== *@
        <h3 class="mb-4">Twój aktywny karnet</h3>

        <div class="card bg-dark text-light p-4 rounded-4 col-md-6">
            <h4 class="text-primary">@activePass.Name</h4>

            <p class="mb-1">
                <strong>Cena:</strong> $@activePass.Price
            </p>

            <p class="mb-3">
                <strong>Ważny do:</strong>
                @activePass.EndDate.ToLocalTime().ToString("dd.MM.yyyy")
            </p>

            <form asp-action="RemovePass" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    Usuń karnet
                </button>
            </form>
        </div>
    }

</div>