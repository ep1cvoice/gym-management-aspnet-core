@model GymApp.Models.ViewModels.EditProfileViewModel

@{
    string? editSection = ViewBag.EditSection as string;
}

@if (editSection == null)
{
    <h1 class="fw-bold mb-4">Moje konto</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body bg-dark text-light border border-dark rounded">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0">Moje dane</h5>

                <div>
                    <a class="btn btn-outline-light btn-sm me-2" asp-action="Index" asp-route-section="password">
                        zmień hasło
                    </a>


                    <a class="btn btn-primary btn-sm" asp-action="Index" asp-route-section="account"
                        asp-route-editSection="profile">
                        edytuj
                    </a>
                </div>
            </div>

            <hr />

            <p><strong>Imię:</strong> @Model.FirstName</p>
            <p><strong>Nazwisko:</strong> @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
            <p><strong>Dokument:</strong> @Model.DocumentNumber</p>

        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body bg-dark text-light border border-dark rounded">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h5 class="fw-bold mb-0">Adres kontaktowy</h5>

                <a class="btn btn-primary btn-sm" asp-action="Index" asp-route-section="account"
                    asp-route-editSection="address">
                    edytuj
                </a>
            </div>

            <hr />

            @if (!string.IsNullOrEmpty(Model.Street))
            {
                <p><strong>Ulica:</strong> @Model.Street</p>
                <p><strong>Kod pocztowy:</strong> @Model.PostalCode</p>
                <p><strong>Miasto:</strong> @Model.City</p>
            }
            else
            {
                <p class="text-secondary fst-italic">
                    Brak danych adresowych
                </p>
            }

        </div>
    </div>
}


@if (editSection == "profile")
{
    <h1 class="fw-bold mb-4">Edytuj moje dane</h1>

    <form asp-action="SaveProfile" method="post">
        @Html.AntiForgeryToken()

        <div class="card shadow-sm mb-4">
            <div class="card-body bg-dark text-light border border-dark rounded">

                <div class="mb-3">
                    <label asp-for="FirstName" class="form-label">Imie</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="LastName" class="form-label">Nazwisko</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label">Telefon</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="DocumentNumber" class="form-label">Nr. dowodu</label>
                    <input asp-for="DocumentNumber" class="form-control" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-light" asp-action="Index" asp-route-section="account">
                        Anuluj
                    </a>



                    <button type="submit" class="btn btn-primary">
                        Zapisz
                    </button>
                </div>

            </div>
        </div>
    </form>
}


@if (editSection == "address")
{
    <h1 class="fw-bold mb-4">Edytuj adres</h1>

    <form asp-action="SaveAddress" method="post">
        @Html.AntiForgeryToken()

        <div class="card shadow-sm mb-4">
            <div class="card-body bg-dark text-light border border-dark rounded">

                <div class="mb-3">
                    <label asp-for="Street" class="form-label">Ulica</label>
                    <input asp-for="Street" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="PostalCode" class="form-label">Kod pocztowy</label>
                    <input asp-for="PostalCode" class="form-control" />
                </div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label">Miasto</label>
                    <input asp-for="City" class="form-control" />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-light" asp-action="Index" asp-route-section="account">
                        Anuluj
                    </a>

                    <button type="submit" class="btn btn-primary">
                        Zapisz
                    </button>
                </div>

            </div>
        </div>
    </form>
}

