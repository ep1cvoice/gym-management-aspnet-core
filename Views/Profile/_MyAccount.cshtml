@if (editSection == "password")
{
    <h1 class="fw-bold mb-4">Zmień hasło</h1>

    <form>

        <div class="card shadow-sm mb-4">
            <div class="card-body bg-dark text-light border border-dark rounded">

                <!-- STARE HASŁO -->
                <div class="mb-3">
                    <label class="form-label">Aktualne hasło</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Wpisz aktualne hasło" />
                </div>

                <!-- NOWE HASŁO -->
                <div class="mb-3">
                    <label class="form-label">Nowe hasło</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Wpisz nowe hasło" />
                    <div class="form-text text-secondary">
                        Min. 8 znaków, 1 wielka litera, 1 cyfra
                    </div>
                </div>

                <!-- POWTÓRZ HASŁO -->
                <div class="mb-3">
                    <label class="form-label">Powtórz nowe hasło</label>
                    <input type="password"
                           class="form-control"
                           placeholder="Powtórz nowe hasło" />
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a class="btn btn-outline-light"
                       asp-controller="Profile"
                       asp-action="Index"
                       asp-route-section="account">
                        Anuluj
                    </a>

                    <button type="button"
                            class="btn btn-primary"
                            disabled>
                        Zmień hasło
                    </button>
                </div>

            </div>
        </div>

    </form>
}

