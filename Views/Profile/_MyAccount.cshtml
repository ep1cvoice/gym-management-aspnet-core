@{
    string? editSection = ViewBag.EditSection as string;
}

<!-- ================= CONTENT ================= -->


@if (editSection == "profile")
{
    <h1 class="fw-bold mb-4">Edytuj moje dane</h1>

    <form>

        <div class="card shadow-sm mb-4">
            <div class="card-body bg-dark text-light border border-dark rounded">

                <div class="mb-3">
                    <label class="form-label">Imię</label>
                    <input class="form-control" value="Pavlo" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Nazwisko</label>
                    <input class="form-control" value="Kovalchuk" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="pavelkovalchuk0510@gmail.com" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefon</label>
                    <input class="form-control" value="+48 576 893 299" />
                </div>


                <div class="d-flex justify-content-end gap-2">
                    <a class="btn btn-outline-light"
                       asp-controller="Profile"
                       asp-action="Index"
                       asp-route-section="account">
                        Anuluj
                    </a>

                    <button type="button" class="btn btn-primary" disabled>
                        Zapisz (wkrótce)
                    </button>
                </div>

            </div>
        </div>

    </form>
}

