                                <path
                                    d="M83.128,86.533c-7.487,0-13.566,6.079-13.566,13.575v84.783c0,7.496,6.08,13.575,13.566,13.575
                                    c7.496,0,13.576-6.079,13.576-13.575v-84.783C96.704,92.612,90.624,86.533,83.128,86.533z" />
                                <path
                                    d="M201.872,86.533c-7.496,0-13.576,6.079-13.576,13.575v84.783c0,7.496,6.08,13.575,13.576,13.575
                                    c7.487,0,13.566-6.079,13.566-13.575v-84.783C215.438,92.612,209.359,86.533,201.872,86.533z" />
                            </g>

                        </svg>

                        UrbanFit Gym
                    </a>


                    <p class="text-secondary small py-2">
                        Train with purpose. Move with confidence. Live stronger — every day, in and out of the gym. At
                        UrbanFit Gym, we help you build habits, strength, and motivation that last. Every workout is a
                        step toward a healthier, more confident you.
                    </p>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="fw-bold mb-3">Sitemap</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-secondary text-decoration-none">About Us</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Promos</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">News & Blog</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Help Center</a></li>
                    </ul>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="fw-bold mb-3">Support</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-secondary text-decoration-none">FAQ</a></li>
                        <li><a href="#" class="text-secondary text-decoration-none">Support Center</a></li>
                    </ul>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="fw-bold mb-3">Social Media</h6>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-instagram"></i></a>
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-twitter"></i></a>
                        <a href="#" class="text-secondary fs-4"><i class="bi bi-facebook"></i></a>
                    </div>
                </div>

            </div>

            <hr class="border-secondary" />

            <div class="d-flex justify-content-between small text-secondary">

                <span>© 2026 UrbanFit Gym</span>

                <div class="d-flex gap-3">
                    <a href="#" class="text-secondary text-decoration-none">Terms of Use</a>
                    <a href="#" class="text-secondary text-decoration-none">Privacy Policy</a>
                </div>
            </div>

        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)

</body>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        @TempData["Success"]
    </div>
}



</html>