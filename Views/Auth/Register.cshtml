@{
    ViewData["Title"] = "Register";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}



<section class="bg-black min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 d-none d-lg-block">
                <img src="/img/hero-img/hero-img-large.jpg" class="img-fluid rounded-4 shadow-lg" />
            </div>

            <div class="col-lg-5 offset-lg-1 text-light d-flex flex-column justify-center align-center">
                <div class="bg-dark p-5 rounded-4 shadow">

                    <h2 class="fw-bold mb-">Create Account</h2>
                    <p class="text-secondary mb-4">Start your transformation today</p>

                    <form asp-action="Register" asp-controller="Auth" method="post">

                        <div class="mb-3">
                            <label class="form-label text-secondary">Email</label>
                            <input type="email" name="email" placeholder="Email"
                                class="form-control form-control-lg bg-black text-light border-0">
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-secondary">Password</label>
                            <input type="password" name="password" placeholder="Password"
                                class="form-control form-control-lg bg-black text-light border-0">
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            Create Account
                        </button>

                        <p class="text-secondary text-center mt-4">
                            Already have an account?
                            <a asp-action="Register" class="text-primary text-decoration-none">
                                Register
                            </a>
                        </p>

                    </form>


                </div>
            </div>

        </div>
    </div>
</section>