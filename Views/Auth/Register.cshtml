@model GymApp.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<section class="bg-black min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 d-none d-lg-block">
                <img src="/img/hero-img/hero-img-large.jpg" class="img-fluid rounded-4 shadow-lg" />
            </div>

            <div class="col-lg-5 offset-lg-1 text-light">
                <div class="bg-dark p-5 rounded-4 shadow">

                    <h2 class="fw-bold mb-2">Create Account</h2>
                    <p class="text-secondary mb-4">Start your transformation today</p>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="Register" asp-controller="Auth" method="post" novalidate>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-secondary"></label>
                            <input asp-for="Email" class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label text-secondary"></label>
                            <input asp-for="FirstName"
                                class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label text-secondary"></label>
                            <input asp-for="LastName"
                                class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label asp-for="Password" class="form-label text-secondary"></label>
                            <input asp-for="Password"
                                class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label text-secondary">Confirm Password</label>
                            <input asp-for="ConfirmPassword"
                                class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            Create Account
                        </button>

                        <p class="text-secondary text-center mt-4">
                            Already have an account?
                            <a asp-action="Login" class="text-primary text-decoration-none">
                                Login
                            </a>
                        </p>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}