                            <input asp-for="Email" class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label text-secondary">Wpisz hasÅ‚o</label>
                            <input asp-for="Password"
                                class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <button class="btn btn-primary w-100 py-2 mt-4">
                            Zaloguj siÄ™
                        </button>

                        <p class="text-secondary text-center mt-4">
