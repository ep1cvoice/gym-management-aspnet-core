@model GymApp.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<section class="bg-black min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 d-none d-lg-block">
                <img src="/img/hero-img/hero-img-large.jpg"
                     class="img-fluid rounded-4 shadow-lg" />
            </div>

            <div class="col-lg-5 offset-lg-1 text-light">
                <div class="bg-dark p-5 rounded-4 shadow">

                    <h2 class="fw-bold mb-2">Welcome Back</h2>
                    <p class="text-secondary mb-4">
                        Login to continue your fitness journey
                    </p>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }

                    <form asp-action="Login" asp-controller="Auth" method="post" novalidate>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label text-secondary"></label>
                            <input asp-for="Email"
                                   class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label text-secondary"></label>
                            <input asp-for="Password"
                                   class="form-control form-control-lg bg-light text-dark border-0" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <button class="btn btn-primary w-100 py-2">
                            Login
                        </button>

                        <p class="text-secondary text-center mt-4">
                            Donâ€™t have an account?
                            <a asp-action="Register"
                               class="text-primary text-decoration-none">
                                Register
                            </a>
                        </p>
                    </form>

                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
